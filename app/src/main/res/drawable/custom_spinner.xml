<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/deaktif" />
                    <stroke android:width="1dp" android:color="@color/kenar" />
                    <padding android:left="1dp" android:top="1dp"
                        android:right="1dp" android:bottom="1dp" />
                    <corners android:radius="4dp" />
                </shape>
            </item>

            <item
                android:right="5dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/icon_down" />
            </item>
        </layer-list>
    </item>
</selector>
